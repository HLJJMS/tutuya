<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundGM"
    tools:ignore="MissingConstraints">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/BackgroundGM"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#FEA30A"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_corner"
                android:gravity="center"
                android:hint="搜索"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintBottom_toBottomOf="@id/title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:id="@+id/bt_search"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginRight="12dp"

                android:src="@mipmap/search"
                app:layout_constraintBottom_toBottomOf="@id/et_search"
                app:layout_constraintRight_toRightOf="@id/et_search"
                app:layout_constraintTop_toTopOf="@id/et_search" />

            <ImageView
                android:id="@+id/lunbo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/linshilunbo"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <TextView
                android:id="@+id/bt_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="8dp"
                android:text="全部"
                android:textSize="@dimen/bigTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/bt_new"
                app:layout_constraintTop_toBottomOf="@id/lunbo" />

            <TextView
                android:id="@+id/bt_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="8dp"
                android:text="最新"
                android:textSize="@dimen/bigTitle"
                app:layout_constraintLeft_toRightOf="@id/bt_all"
                app:layout_constraintRight_toLeftOf="@id/bt_sell"
                app:layout_constraintTop_toTopOf="@id/bt_all" />

            <TextView
                android:id="@+id/bt_sell"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="8dp"
                android:text="销量"
                android:textSize="@dimen/bigTitle"
                app:layout_constraintLeft_toRightOf="@id/bt_new"
                app:layout_constraintRight_toLeftOf="@id/bt_price"
                app:layout_constraintTop_toTopOf="@id/bt_new" />

            <TextView
                android:id="@+id/bt_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:padding="8dp"
                android:text="价格"
                android:textSize="@dimen/bigTitle"
                app:layout_constraintLeft_toRightOf="@id/bt_sell"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/bt_sell" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/text9"
                app:layout_constraintBottom_toBottomOf="@id/bt_all"
                app:layout_constraintRight_toRightOf="@id/bt_all"
                app:layout_constraintTop_toTopOf="@id/bt_all" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/text9"
                app:layout_constraintBottom_toBottomOf="@id/bt_all"
                app:layout_constraintRight_toRightOf="@id/bt_new"
                app:layout_constraintTop_toTopOf="@id/bt_all" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/text9"
                app:layout_constraintBottom_toBottomOf="@id/bt_all"
                app:layout_constraintRight_toRightOf="@id/bt_sell"
                app:layout_constraintTop_toTopOf="@id/bt_all" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/mall_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/bt_all" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <com.tutuya.tck.diyview.DragFloatActionButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:elevation="20dp"
        android:src="@mipmap/icon_float_shop_car"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>