<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.login.LoginActivity"
    tools:ignore="MissingConstraints">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="20dp"
        android:id="@+id/bt_back"
        android:src="@mipmap/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <ImageView
       app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:id="@+id/img"
        android:src="@mipmap/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/img"
        android:id="@+id/user_id"
        android:inputType="number"
        android:layout_width="0dp"
        android:background="#00000000"
        android:layout_height="wrap_content"
        android:hint="请输入用户名/手机号"
        app:layout_constraintLeft_toRightOf="@id/china"
        app:layout_constraintRight_toLeftOf="@id/rg" />
    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_id"
        android:layout_width="0dp"
        android:background="@color/colorBlack"
        android:layout_height="0.8dp"
        app:layout_constraintLeft_toRightOf="@id/lg"
        app:layout_constraintRight_toLeftOf="@id/rg" />
    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/psw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:background="#00000000"
        app:layout_constraintLeft_toRightOf="@id/lg"
        app:layout_constraintRight_toLeftOf="@id/rg"
        app:layout_constraintTop_toBottomOf="@id/user_id" />
    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/psw"
        android:layout_width="0dp"
        android:background="@color/colorBlack"
        android:layout_height="0.8dp"
        app:layout_constraintLeft_toRightOf="@id/lg"
        app:layout_constraintRight_toLeftOf="@id/rg" />

    <Button
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="登录"
        android:background="@drawable/color_gm"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toRightOf="@id/lbg"
        app:layout_constraintRight_toLeftOf="@id/rbg"
        app:layout_constraintTop_toBottomOf="@id/psw" />

    <android.support.constraint.Guideline
        android:id="@+id/lg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />
    <android.support.constraint.Guideline
        android:id="@+id/lbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/rbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="短信验证码登录"
        app:layout_constraintLeft_toRightOf="@id/lg"
        app:layout_constraintTop_toBottomOf="@id/ok" />

    <TextView
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:text="忘记密码"
        android:textColor="#fead0a"
        app:layout_constraintBottom_toBottomOf="@id/psw"
        app:layout_constraintRight_toLeftOf="@id/rg"
        app:layout_constraintTop_toTopOf="@id/psw" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新用户注册"
        app:layout_constraintRight_toLeftOf="@id/rg"
        app:layout_constraintTop_toBottomOf="@id/ok" />
    <LinearLayout
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/not"
            android:text="登录即代表您已经同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/book"
            android:text="《涂涂鸦隐私政策》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@id/psw"
        app:layout_constraintRight_toLeftOf="@id/forget"
        app:layout_constraintTop_toTopOf="@id/psw" />
    <TextView
        android:id="@+id/china"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@id/user_id"
        app:layout_constraintBottom_toBottomOf="@id/user_id"
        app:layout_constraintLeft_toRightOf="@id/lg"
        android:text="中国 （+86）"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>