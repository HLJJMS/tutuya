<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundGM"
    tools:context=".activity.setting.SettingActivity"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/head"
        layout="@layout/head_back" />

    <TextView
        android:id="@+id/my_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/ll"
        app:layout_constraintTop_toTopOf="@id/ll" />

    <ImageView

        android:id="@+id/headimg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:paddingLeft="20dp"
        android:src="@mipmap/baby_headimg"
        app:layout_constraintBottom_toBottomOf="@id/ll"
        app:layout_constraintTop_toTopOf="@id/ll" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        app:layout_constraintLeft_toRightOf="@id/headimg"
        app:layout_constraintTop_toBottomOf="@id/head">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lalalalla"
            android:textColor="@color/subhead"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/iclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="第16中学"
            android:textColor="@color/subhead"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="第20小学"
            android:textColor="@color/subhead"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/patriarch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:text="家长信息"
        android:textColor="@color/subhead"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/ll" />

    <TextView
        android:id="@+id/edit_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:text="修改密码"
        android:textColor="@color/subhead"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/patriarch" />

    <TextView
        android:id="@+id/edit_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:text="修改手机号码"
        android:textColor="@color/subhead"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/edit_psw" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_go"
        app:layout_constraintBottom_toBottomOf="@id/ll"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_go"
        app:layout_constraintBottom_toBottomOf="@id/edit_psw"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_psw" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_go"
        app:layout_constraintBottom_toBottomOf="@id/edit_tel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_tel" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_go"
        app:layout_constraintBottom_toBottomOf="@id/patriarch"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/patriarch" />

    <android.support.constraint.Guideline
        android:id="@+id/lbg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:id="@+id/rbg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <TextView
        android:id="@+id/exit"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/color_gm"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/edit_tel"
        app:layout_constraintLeft_toRightOf="@id/lbg"
        app:layout_constraintRight_toLeftOf="@id/rbg" />


</android.support.constraint.ConstraintLayout>