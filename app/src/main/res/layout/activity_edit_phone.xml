<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:background="@color/BackgroundGM"
    android:layout_height="match_parent"
    tools:context=".activity.setting.TelVerifyActivity">
    <include android:id="@+id/title" layout="@layout/head_back"/>

    <TextView
        android:id="@+id/explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="请输入新手机号"
        android:textColor="@color/subhead"
        app:layout_constraintLeft_toRightOf="@id/lg"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        app:layout_constraintBottom_toBottomOf="@id/tel"
        app:layout_constraintTop_toTopOf="@id/tel"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <EditText
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:hint="请输入新手机号码"
        android:textColor="@color/subhead"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/lg"
        app:layout_constraintTop_toBottomOf="@id/explain" />

    <TextView
        app:layout_constraintBottom_toBottomOf="@id/tv_number"
        app:layout_constraintTop_toTopOf="@id/tv_number"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        app:layout_constraintLeft_toRightOf="@id/lg"
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="验证码:"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tel" />

    <EditText

        android:id="@+id/et_number"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:hint="请输入验证码"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_number"
        app:layout_constraintLeft_toRightOf="@id/tv_number"
        app:layout_constraintTop_toTopOf="@id/tv_number" />

    <TextView
        android:id="@+id/button_number"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="#5ECBFD"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_number" />
    <TextView
        android:background="@drawable/color_gm"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_number"
        app:layout_constraintLeft_toRightOf="@id/lbg"
        app:layout_constraintRight_toLeftOf="@id/rbg"

        />
    <android.support.constraint.Guideline
        android:id="@+id/lg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />
    <android.support.constraint.Guideline
        android:id="@+id/lbg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />
    <android.support.constraint.Guideline
        android:id="@+id/rbg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />
</android.support.constraint.ConstraintLayout>