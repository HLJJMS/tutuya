<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/BackgroundGM"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.setting.EditPwdActivity">
    <include layout="@layout/head_back" android:id="@+id/title" />
    <TextView
        app:layout_constraintTop_toTopOf="@id/tv_frist"
        app:layout_constraintBottom_toBottomOf="@id/tv_frist"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       />
    <TextView
        app:layout_constraintBottom_toBottomOf="@id/tv_second"
        app:layout_constraintTop_toTopOf="@id/tv_second"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />
    <TextView
        app:layout_constraintLeft_toRightOf="@id/lg"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="20dp"
        android:textColor="@color/subhead"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="新密码:"
        android:id="@+id/tv_frist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        app:layout_constraintLeft_toRightOf="@id/tv_second"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:hint="请输入新密码"
        app:layout_constraintTop_toTopOf="@id/tv_frist"
        app:layout_constraintBottom_toBottomOf="@id/tv_frist"
        android:id="@+id/et_frist"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        app:layout_constraintLeft_toRightOf="@id/lg"
        app:layout_constraintTop_toBottomOf="@id/tv_frist"
        android:layout_marginTop="20dp"
        android:textColor="@color/subhead"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="确认新密码:"
        android:id="@+id/tv_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        app:layout_constraintLeft_toRightOf="@id/tv_second"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:hint="请再次输入"
        app:layout_constraintTop_toTopOf="@id/tv_second"
        app:layout_constraintBottom_toBottomOf="@id/tv_second"
        android:id="@+id/et_second"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:background="@drawable/color_gm"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_second"
        app:layout_constraintLeft_toRightOf="@id/lbg"
        app:layout_constraintRight_toLeftOf="@id/rbg"

        />
    <android.support.constraint.Guideline
        android:id="@+id/lg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />
    <android.support.constraint.Guideline
        android:id="@+id/lbg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />
    <android.support.constraint.Guideline
        android:id="@+id/rbg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />
</android.support.constraint.ConstraintLayout>