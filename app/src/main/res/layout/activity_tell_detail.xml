<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tck.activity.TellDetailActivity"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/head"
        layout="@layout/head_back" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/head" />

    <com.flyco.tablayout.SlidingTabLayout
        app:tl_underline_color="@color/colorPrimary"
        app:tl_textSelectColor="@color/colorPrimary"
        app:tl_textUnselectColor="@color/subhead"
        app:tl_tab_space_equal="true"
        app:tl_indicator_color="@color/colorWhite"
        app:tl_indicator_height="50dp"
        app:tl_textsize="18sp"
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/img" />

    <android.support.v4.view.ViewPager
        android:id="@+id/frament"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab"/>
</android.support.constraint.ConstraintLayout>