<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BuyBeanActivity"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/title"
        layout="@layout/head_back" />

    <TextView
        android:id="@+id/head_bg"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="@id/lrg"
        app:layout_constraintRight_toRightOf="@id/rrg"
        app:layout_constraintTop_toBottomOf="@id/title" />


    <ImageView
        android:id="@+id/headImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@id/head_bg"
        app:layout_constraintLeft_toLeftOf="@id/head_bg"
        app:layout_constraintTop_toTopOf="@id/head_bg" />

    <TextView
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/bigTitle"
        app:layout_constraintTop_toTopOf="@id/headImg"
        android:text="小明"
        app:layout_constraintLeft_toRightOf="@id/headImg"
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:layout_marginLeft="20dp"
        android:textSize="@dimen/bigTitle"
        app:layout_constraintBottom_toBottomOf="@id/headImg"
        android:text="智慧豆余额："
        app:layout_constraintLeft_toRightOf="@id/headImg"
        android:id="@+id/yue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView

        android:layout_marginLeft="20dp"
        android:textSize="@dimen/bigTitle"
        app:layout_constraintBottom_toBottomOf="@id/headImg"
        android:text="30"
        android:textColor="@color/colorYellow"
        app:layout_constraintLeft_toRightOf="@id/yue"
        android:id="@+id/txt_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bg2"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/title2"
        android:textColor="@color/subhead"
        app:layout_constraintTop_toTopOf="@id/bg2"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/lrg"
        android:text="智慧豆充值"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <RadioGroup
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title2"
        app:layout_constraintLeft_toLeftOf="@id/lrg"
        app:layout_constraintRight_toRightOf="@id/rrg"
        android:id="@+id/radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RadioGroup>

    <TextView
        android:id="@+id/title3"
        android:textColor="@color/subhead"

        app:layout_constraintTop_toBottomOf="@id/radio_group"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="@id/lrg"
        android:text="支付方式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/lrg"
        app:layout_constraintTop_toBottomOf="@id/title3"
        android:src="@mipmap/icon_weixin"
        android:id="@+id/logo_weixin"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    <TextView
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/logo_weixin"
        android:text="微信"
        app:layout_constraintTop_toTopOf="@id/logo_weixin"
        app:layout_constraintBottom_toBottomOf="@id/logo_weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/logo_weixin"
        android:text="支付宝"
        app:layout_constraintTop_toTopOf="@id/logo_zhifubao"
        app:layout_constraintBottom_toBottomOf="@id/logo_zhifubao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/lrg"
        app:layout_constraintTop_toBottomOf="@id/logo_weixin"
        android:src="@mipmap/icon_zhifubao"
        android:id="@+id/logo_zhifubao"
        android:layout_width="30dp"
        android:layout_height="30dp" />

        <RadioButton
            app:layout_constraintTop_toTopOf="@id/logo_weixin"
            app:layout_constraintBottom_toBottomOf="@id/logo_weixin"
            app:layout_constraintRight_toRightOf="@id/rrg"
            android:id="@+id/check_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            app:layout_constraintTop_toTopOf="@id/logo_zhifubao"
            app:layout_constraintBottom_toBottomOf="@id/logo_zhifubao"
            app:layout_constraintRight_toRightOf="@id/rrg"
            android:id="@+id/check_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginBottom="50dp"
        android:text="去支付"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/bigTitle"
        android:background="@drawable/color_gm"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.constraint.Guideline
        android:id="@+id/lrg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06" />

    <android.support.constraint.Guideline
        android:id="@+id/rrg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94" />
</android.support.constraint.ConstraintLayout>