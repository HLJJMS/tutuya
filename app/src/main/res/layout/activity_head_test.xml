<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    tools:context=".activity.baby.BabyListForHeadActivity">
    <include layout="@layout/head_back"
        android:id="@+id/head"
        />
    <android.support.v7.widget.RecyclerView
        app:layout_constraintRight_toLeftOf="@id/rg"
        app:layout_constraintLeft_toRightOf="@id/lg"
        android:id="@+id/list"
        app:layout_constraintTop_toBottomOf="@id/head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/add"/>
    <ImageView
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/img_null"
        android:src="@mipmap/icon_null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:id="@+id/txt_null"
        android:text="亲爱的家长没有预约信息哦"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/color_gm"
        android:gravity="center"
        android:text="添加预约"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintRight_toLeftOf="@id/rbg"
        app:layout_constraintLeft_toRightOf="@id/lbg"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <android.support.constraint.Guideline
        android:id="@+id/lg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />
    <android.support.constraint.Guideline
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />
    <android.support.constraint.Guideline
        android:id="@+id/lbg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />
    <android.support.constraint.Guideline
        android:id="@+id/rbg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />
</android.support.constraint.ConstraintLayout>