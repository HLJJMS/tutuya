<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="3dp"
    tools:ignore="MissingConstraints">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/baby_bg">

        <ImageView
            android:id="@+id/headimg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingLeft="10dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout

            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@id/headimg">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lalalal"
                android:textColor="@color/subhead"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/iclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第16中学"
                android:textColor="@color/subhead"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第20小学"
                android:textColor="@color/subhead"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/edit"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/color_gm"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ll" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/del"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="@drawable/corner_red_solid"
        android:gravity="center"
        android:text="删除"
        android:textColor="#ffffff"
        android:textSize="17sp"
        app:layout_constraintLeft_toRightOf="@id/cl" />

</android.support.constraint.ConstraintLayout>







