<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingEnd="25dp"
    android:paddingBottom="5dp"
    tools:ignore="MissingConstraints">
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/image"
        android:src="@mipmap/linshimeinv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:text="美丽妈妈"
        android:textSize="@dimen/scTitle"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintTop_toTopOf="@id/image"
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:max="100"
        android:progress="50"
        android:stepSize="0.5"
        android:progressTint="@color/colorYellow"
        app:layout_constraintLeft_toLeftOf="@id/txt_name"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:id="@+id/select_start"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
    <TextView
        android:text="21:35"
        app:layout_constraintTop_toTopOf="@id/select_start"
        app:layout_constraintBottom_toBottomOf="@id/select_start"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:text="课程非常，学到好多知识"
        android:id="@+id/txt_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/txt_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        app:layout_constraintLeft_toRightOf="@id/img1"
        app:layout_constraintTop_toBottomOf="@id/txt_detail"
        android:id="@+id/img2"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/txt_detail"
        app:layout_constraintLeft_toRightOf="@id/img2"
        android:id="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        style="@style/good"
        android:id="@+id/cb_good"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:layout_constraintRight_toLeftOf="@id/txt_good"
        app:layout_constraintTop_toBottomOf="@id/txt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <TextView
       app:layout_constraintTop_toTopOf="@id/cb_good"
       app:layout_constraintBottom_toBottomOf="@+id/cb_good"
       android:text="525"
       android:gravity="center"
       app:layout_constraintRight_toRightOf="parent"
       android:id="@+id/txt_good"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_comment"
        android:text="232"
        android:gravity="center"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/cb_good"
        app:layout_constraintBottom_toBottomOf="@+id/cb_good"
        app:layout_constraintRight_toLeftOf="@id/cb_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:src="@mipmap/icon_message"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/cb_good"
        app:layout_constraintBottom_toBottomOf="@+id/cb_good"
        app:layout_constraintRight_toLeftOf="@id/txt_comment"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
</android.support.constraint.ConstraintLayout>
