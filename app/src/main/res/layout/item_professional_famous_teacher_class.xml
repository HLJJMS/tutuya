<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:background="@drawable/corner_white_solid">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/bigTitle"
        android:textColor="@color/subhead"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/title"
        android:text="书法大赛，教学视频"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="免费"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:textColor="@color/textGreen"
        android:textSize="@dimen/bigTitle"
        android:id="@+id/free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_name"
        android:text="主讲老师：谷传玲"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        android:text="时长：32分7秒"
        android:textSize="@dimen/scTitle"
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@id/txt_time"
        app:layout_constraintTop_toTopOf="@id/txt_time"
        app:layout_constraintBottom_toBottomOf="@id/txt_time"
        android:src="@drawable/heart_red"
        android:id="@+id/heart"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/txt_heart"
        android:text="时长：32分7秒"
        android:textSize="@dimen/scTitle"
        app:layout_constraintLeft_toRightOf="@id/heart"
        app:layout_constraintBottom_toBottomOf="@id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
