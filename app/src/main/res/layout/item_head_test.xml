<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/head_test_bg"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:padding="10dp"
    android:layout_height="130dp"
    tools:ignore="MissingConstraints">

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_id"
        android:textColor="@color/subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约单号: " />

    <TextView
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/subhead"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/tv_id"
        android:id="@+id/et_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1352869240" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已取消"
        android:textColor="#A3B0FB"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="10dp" />
    <TextView
        android:textStyle="bold"
        android:textColor="@color/subhead"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_id"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宝宝姓名：" />
    <TextView
        android:textColor="@color/subhead"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_id"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哦哦哦哦哦" />

    <TextView
        android:textStyle="bold"
        android:textColor="@color/subhead"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:id="@+id/tv_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所在园所：" />
    <TextView
        android:textColor="@color/subhead"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/tv_school"
        android:id="@+id/et_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通幼儿园：" />
    <TextView
        android:textStyle="bold"
        android:textColor="@color/subhead"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_school"
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约日期：" />
    <TextView
        android:textColor="@color/subhead"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_school"
        app:layout_constraintLeft_toRightOf="@id/tv_date"
        android:id="@+id/et_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1833-8-26" />

    <TextView
        android:id="@+id/read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="查看报告"
        android:textColor="#5AFAFE"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_school" />
    <TextView
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_id"
        android:background="#BFBFBF"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</android.support.constraint.ConstraintLayout>
