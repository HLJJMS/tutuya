<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll"
    android:layout_marginTop="3dp"
    android:background="@drawable/corner_gm_solid"

    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
       android:paddingBottom="5dp"
        android:src="@mipmap/demo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".4" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/subhead"
        app:layout_constraintTop_toTopOf="@id/img"
        app:layout_constraintStart_toEndOf="@id/img"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="书法教学" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:text="分类：养成教育"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="讲师：王老师"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/type" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="共340集"
        android:textSize="10sp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/teacher" />
    <ImageView
        app:layout_constraintTop_toTopOf="@id/all"
        app:layout_constraintBottom_toBottomOf="@id/all"
        app:layout_constraintLeft_toRightOf="@id/all"
        android:layout_marginLeft="14dp"
        android:src="@mipmap/eye"
        android:id="@+id/eye"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/et_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="37"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/all"
        app:layout_constraintLeft_toRightOf="@id/eye"
        app:layout_constraintTop_toTopOf="@id/all" />

    <CheckBox
        android:id="@+id/like_img"
        style="@style/heart"
        android:scaleX="0.60"
        android:scaleY="0.60"
        android:layout_marginLeft="14dp"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/all"
        app:layout_constraintBottom_toBottomOf="@id/all"
        app:layout_constraintLeft_toRightOf="@id/et_eye"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/et_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="37"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/all"
       app:layout_constraintLeft_toRightOf="@id/like_img"
        android:layout_marginRight="5dp" />
</android.support.constraint.ConstraintLayout>







