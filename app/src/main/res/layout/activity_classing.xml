<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/BackgroundGM"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tck.activity.Classing.ClassingActivity"
        tools:ignore="MissingConstraints">

        <include
            android:id="@+id/title"
            layout="@layout/head_back" />

        <ImageView
            android:id="@+id/lunbo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/linshilunboclass"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <com.tutuya.tck.diyview.HomeTitle

            android:id="@+id/bt_konw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@id/lg"
            app:layout_constraintRight_toLeftOf="@id/rg"
            app:layout_constraintTop_toBottomOf="@id/lunbo"
            app:txt="家长五懂" />

        <ImageView
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/bt_family"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/linshiclassone"
            app:layout_constraintLeft_toRightOf="@id/lg"
            app:layout_constraintRight_toLeftOf="@id/bt_develop"
            app:layout_constraintTop_toBottomOf="@id/bt_konw" />

        <ImageView
            android:paddingStart="10dp"
            android:id="@+id/bt_develop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/linshiclasstwo"
            app:layout_constraintLeft_toRightOf="@id/bt_family"
            app:layout_constraintRight_toLeftOf="@id/rg"
           app:layout_constraintTop_toTopOf="@id/bt_family" />

        <ImageView
            android:paddingEnd="10dp"
            android:id="@+id/bt_healthy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/linshiclassthree"
            app:layout_constraintLeft_toRightOf="@id/lg"
            app:layout_constraintRight_toLeftOf="@id/bt_develop"
            app:layout_constraintTop_toBottomOf="@id/bt_family" />

        <ImageView
            android:paddingStart="10dp"
            android:id="@+id/bt_expand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/linshiclassfour"
            app:layout_constraintLeft_toRightOf="@id/bt_family"
            app:layout_constraintRight_toLeftOf="@id/rg"
            app:layout_constraintTop_toBottomOf="@id/bt_family" />

        <ImageView
            android:id="@+id/bt_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/linshiclassfive"
            app:layout_constraintBottom_toBottomOf="@id/bt_healthy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_konw"
            app:layout_constraintTop_toTopOf="@id/bt_family" />

        <com.tutuya.tck.diyview.HomeTitle
            android:id="@+id/bt_professional"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@id/lg"
            app:layout_constraintRight_toLeftOf="@id/rg"
            app:layout_constraintTop_toBottomOf="@id/bt_healthy"
            app:txt="专家名师" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/bt_teacher_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/lg"
            app:layout_constraintRight_toLeftOf="@id/bt_teacher_two"
            app:layout_constraintTop_toBottomOf="@id/bt_professional" />

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/bt_teacher_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/linshiclassteacher"
            app:layout_constraintLeft_toRightOf="@id/bt_teacher_one"
            app:layout_constraintRight_toLeftOf="@id/rg"
            app:layout_constraintTop_toTopOf="@id/bt_teacher_one" />
        <TextView
            app:layout_constraintTop_toTopOf="@id/icon_one"
            app:layout_constraintBottom_toBottomOf="@id/txt_detail_one_three"
            app:layout_constraintRight_toRightOf="@id/txt_detail_one_three"
            app:layout_constraintLeft_toLeftOf="@id/txt_detail_one_three"
            android:background="@drawable/corner_white_solid"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <ImageView
            android:id="@+id/icon_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@mipmap/icon_person"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@id/txt_name_one"
            app:layout_constraintLeft_toLeftOf="@id/txt_detail_one" />

        <TextView
            android:id="@+id/txt_number_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25232"
            android:textSize="@dimen/scTitle"
            app:layout_constraintBottom_toBottomOf="@id/icon_one"
            app:layout_constraintLeft_toRightOf="@id/icon_one"
            app:layout_constraintTop_toTopOf="@id/icon_one" />

        <CheckBox
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/bt_heart_one"
            style="@style/heart"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/icon_one"
            app:layout_constraintRight_toRightOf="@id/txt_detail_one"
            app:layout_constraintTop_toTopOf="@id/icon_one" />

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/txt_name_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="谷传玲"
            android:textColor="@color/bigTitle"
            android:paddingBottom="5dp"
            android:textSize="@dimen/bigTitle"
            app:layout_constraintBottom_toTopOf="@id/txt_detail_one"
            app:layout_constraintLeft_toLeftOf="@id/txt_detail_one"
            app:layout_constraintRight_toRightOf="@id/txt_detail_one" />

        <TextView
            android:id="@+id/txt_detail_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="中国首批注册营养师"

            android:textSize="@dimen/scTitle"
            app:layout_constraintBottom_toTopOf="@id/txt_detail_one_two"
            app:layout_constraintLeft_toLeftOf="@id/txt_detail_one_two"
            app:layout_constraintRight_toRightOf="@id/txt_detail_one_two" />

        <TextView
            android:id="@+id/txt_detail_one_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="中国首批注册营养师"

            android:textSize="@dimen/scTitle"
            app:layout_constraintBottom_toTopOf="@id/txt_detail_one_three"
            app:layout_constraintLeft_toLeftOf="@id/txt_detail_one_three"
            app:layout_constraintRight_toRightOf="@id/txt_detail_one_three" />
        <TextView
            android:id="@+id/txt_detail_one_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:paddingLeft="10dp"
            android:text="中国首批注册营养师"
            android:paddingBottom="5dp"
            android:textSize="@dimen/scTitle"
            app:layout_constraintBottom_toTopOf="@id/bt_classing_select"
            app:layout_constraintLeft_toLeftOf="@id/bt_teacher_one"
            app:layout_constraintRight_toRightOf="@id/bt_teacher_one" />

        <com.tutuya.tck.diyview.HomeTitle
            android:id="@+id/bt_classing_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toRightOf="@id/lg"
            app:layout_constraintRight_toLeftOf="@id/rg"
            app:layout_constraintTop_toBottomOf="@id/bt_teacher_one"
            app:txt="课程精选" />
        <ImageView
            app:layout_constraintBottom_toTopOf="@id/group"
            app:layout_constraintLeft_toLeftOf="@id/lg"
            android:layout_marginLeft="50dp"
            android:id="@+id/xiaoren"
            android:src="@mipmap/xiaoren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/bt_classing_select"
            android:orientation="horizontal"
            android:id="@+id/group"
            app:layout_constraintRight_toRightOf="@id/rg"
            app:layout_constraintLeft_toLeftOf="@id/lg"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/r1"
                android:textSize="@dimen/scTitle"
                android:textColor="@color/radio"
                android:gravity="center"
                android:button="@null"
                android:text="创造力"
                android:background="@drawable/classing_radio"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <RadioButton
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/r2"
                android:textSize="@dimen/scTitle"
                android:textColor="@color/radio"
                android:gravity="center"
                android:button="@null"
                android:text="家庭教育"
                android:background="@drawable/classing_radio"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <RadioButton
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/r3"
                android:textSize="@dimen/scTitle"
                android:textColor="@color/radio"
                android:gravity="center"
                android:button="@null"
                android:text="养成教育"
                android:background="@drawable/classing_radio"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <RadioButton
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/r4"
                android:textSize="@dimen/scTitle"
                android:textColor="@color/radio"
                android:gravity="center"
                android:button="@null"
                android:text="健康教育"
                android:background="@drawable/classing_radio"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <RadioButton
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/r5"
                android:textSize="@dimen/scTitle"
                android:textColor="@color/radio"
                android:gravity="center"
                android:button="@null"
                android:text="拓展教育"
                android:background="@drawable/classing_radio"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/group"
            android:id="@+id/rec"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@id/lg"
            app:layout_constraintRight_toLeftOf="@+id/rg"
            android:layout_height="match_parent"/>

        <android.support.constraint.Guideline
            android:id="@+id/lg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <android.support.constraint.Guideline
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>