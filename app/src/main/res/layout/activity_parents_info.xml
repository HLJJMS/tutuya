<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tck.activity.setting.UserDetailActivity"
        tools:ignore="MissingConstraints">

        <include
            android:id="@+id/head"
            layout="@layout/head_back" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="昵称"
            android:textColor="@color/subhead"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/head" />

        <ImageView
            android:id="@+id/name_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_go"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/name" />

        <TextView
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="涂涂鸦"
            app:layout_constraintBottom_toBottomOf="@id/name"
            app:layout_constraintRight_toRightOf="@id/name_go"
            app:layout_constraintTop_toTopOf="@id/name" />

        <TextView
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:paddingLeft="20dp"
           android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="与子女关系"
            android:textColor="@color/subhead"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <ImageView
            android:id="@+id/link_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_go"
            app:layout_constraintBottom_toBottomOf="@id/link"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/link" />

        <TextView
            android:id="@+id/et_link"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="涂涂鸦"
            app:layout_constraintBottom_toBottomOf="@id/link"
            app:layout_constraintRight_toRightOf="@id/link_go"
            app:layout_constraintTop_toTopOf="@id/link" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:paddingLeft="20dp"
           android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="性别"
            android:textColor="@color/subhead"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/link" />

        <ImageView
            android:id="@+id/sex_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_go"
            app:layout_constraintBottom_toBottomOf="@id/sex"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/sex" />

        <TextView
            android:id="@+id/et_sex"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="涂涂鸦"
            app:layout_constraintBottom_toBottomOf="@id/sex"
            app:layout_constraintRight_toRightOf="@id/sex_go"
            app:layout_constraintTop_toTopOf="@id/sex" />

        <TextView
            android:id="@+id/profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:paddingLeft="20dp"
           android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="职业类别"
            android:textColor="@color/subhead"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/sex" />

        <ImageView
            android:id="@+id/profession_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_go"
            app:layout_constraintBottom_toBottomOf="@id/profession"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/profession" />

        <TextView
            android:id="@+id/et_profession"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="涂涂鸦"
            app:layout_constraintBottom_toBottomOf="@id/profession"
            app:layout_constraintRight_toRightOf="@id/profession_go"
            app:layout_constraintTop_toTopOf="@id/profession" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:paddingLeft="20dp"
           android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="家庭住址"
            android:textColor="@color/subhead"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/profession" />

        <ImageView
            android:id="@+id/address_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_go"
            app:layout_constraintBottom_toBottomOf="@id/address"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/address" />

        <TextView
            android:id="@+id/et_address"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="涂涂鸦"
            app:layout_constraintBottom_toBottomOf="@id/address"
            app:layout_constraintRight_toRightOf="@id/address_go"
            app:layout_constraintTop_toTopOf="@id/address" />

        <TextView
            android:id="@+id/id_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:paddingLeft="20dp"
           android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="证件类型"
            android:textColor="@color/subhead"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/address" />

        <ImageView
            android:id="@+id/id_type_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_go"
            app:layout_constraintBottom_toBottomOf="@id/id_type"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/id_type" />

        <TextView
            android:id="@+id/et_id_type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="身份证"
            app:layout_constraintBottom_toBottomOf="@id/id_type"
            app:layout_constraintRight_toRightOf="@id/id_type_go"
            app:layout_constraintTop_toTopOf="@id/id_type" />

        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:paddingLeft="20dp"
           android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="证件号码"
            android:textColor="@color/subhead"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/et_id_type" />

        <ImageView
            android:id="@+id/code_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_go"
            app:layout_constraintBottom_toBottomOf="@id/code"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/code" />

        <TextView
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="请输入证件号码"
            app:layout_constraintBottom_toBottomOf="@id/code"
            app:layout_constraintRight_toRightOf="@id/code_go"
            app:layout_constraintTop_toTopOf="@id/code" />
        <TextView
            android:background="@drawable/color_gm"
            android:gravity="center"
            android:text="保存信息"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/code"
            app:layout_constraintLeft_toRightOf="@id/lbg"
            app:layout_constraintRight_toLeftOf="@id/rbg"

            />
        <android.support.constraint.Guideline
            android:id="@+id/lbg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />
        <android.support.constraint.Guideline
            android:id="@+id/rbg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>