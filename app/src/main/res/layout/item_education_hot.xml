<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    tools:ignore="MissingConstraints">

    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/linshishufa"
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/img"
        app:layout_constraintRight_toRightOf="@id/img"
        app:layout_constraintBottom_toBottomOf="@id/img"
        android:background="@drawable/color_gm"
        android:id="@+id/bt"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:textSize="@dimen/small"
        android:text="立即查看"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintBottom_toTopOf="@id/bt"
        android:textColor="@color/textColor"
        android:textSize="@dimen/small"
        android:text="推荐分数"
        android:id="@+id/star_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RatingBar
        app:layout_constraintBottom_toBottomOf="@id/star_title"
        app:layout_constraintLeft_toRightOf="@id/star_title"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:id="@+id/rb_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintBottom_toTopOf="@id/star_title"
        android:layout_marginBottom="2dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/small"
        android:text="养成教育"
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="书法教学"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/scTitle"
        app:layout_constraintBottom_toTopOf="@id/txt_type"
        android:textColor="@color/subhead"
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>