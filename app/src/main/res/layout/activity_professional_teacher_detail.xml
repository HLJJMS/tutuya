<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:background="@color/BackgroundGM"
    android:layout_height="match_parent"
    tools:context=".activity.ProfessionalTeacherDetailActivity">
    <TextView
        app:layout_constraintTop_toBottomOf="@id/bg"
        app:layout_constraintBottom_toBottomOf="@id/hat"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <ImageView
        android:src="@mipmap/linshilunbo"
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <include layout="@layout/head_back_alpha" android:id="@+id/title"/>
    <ImageView
        android:id="@+id/head_img"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintTop_toBottomOf="@id/bg"
        android:src="@mipmap/linshiguxiaoling"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:text="谷传玲"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/head_img"
        android:id="@+id/txt_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="谷传玲"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        android:id="@+id/txt_detail"
        android:textSize="@dimen/scTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <ImageView
       app:layout_constraintTop_toBottomOf="@id/txt_detail"
       android:layout_marginTop="10dp"
       android:src="@mipmap/icon_hat"
       android:id="@+id/hat"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <TextView
        android:background="@color/colorBlack"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/hat"
        app:layout_constraintTop_toTopOf="@+id/hat"
        app:layout_constraintBottom_toBottomOf="@+id/hat"
        android:layout_width="0dp"
        android:layout_height="1dp" />
    <TextView
        android:background="@color/colorBlack"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/hat"
        app:layout_constraintTop_toTopOf="@+id/hat"
        app:layout_constraintBottom_toBottomOf="@+id/hat"
        android:layout_width="0dp"
        android:layout_height="1dp" />

    <com.flyco.tablayout.SlidingTabLayout
        android:layout_marginTop="10dp"
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/corner_white_solid"
        app:layout_constraintTop_toBottomOf="@id/hat"
        app:tl_tab_space_equal="true"
        app:tl_textAllCaps="true"
        app:tl_textBold="BOTH"
        app:tl_textSelectColor="#FEA30E"
        app:tl_textUnselectColor="@color/colorBlack"
        app:tl_textsize="14sp"
        app:tl_underline_color="#FEA30E" />

    <android.support.v4.view.ViewPager
        android:layout_marginTop="10dp"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab" />
</android.support.constraint.ConstraintLayout>